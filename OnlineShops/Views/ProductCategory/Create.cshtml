@model ProductCategory

<h1>Create Product Category</h1>
<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name" class="font-weight-bold">Category Name</label>
        <input asp-for="Name" class="form-control" placeholder="Enter category name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="ParentCategory" class="font-weight-bold">Parent Category</label>
        <select name="ParentCategoryId" class="form-control">
            <option value="">None</option>
            @foreach (var parent in ViewBag.ParentCategories)
            {
                <option value="@parent.ProductCategoryId">@parent.Name</option>
            }
        </select>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-success btn-block">Save Category</button>
    </div>
</form>
<style>
    .form-group {
        margin-bottom: 20px;
    }

    .form-control {
        font-size: 1.1em;
        padding: 10px;
    }

    .btn-block {
        width: 100%;
    }

    .font-weight-bold {
        font-weight: bold;
    }
    .text-danger {
        font-size: 0.9em;
    }
    .form-control::placeholder {
        font-style: italic;
    }
</style>
