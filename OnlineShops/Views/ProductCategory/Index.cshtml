@model IEnumerable<OnlineShops.Models.DbModels.DTODbModels.ProductCategoryDTO>

<h2>Product Categories</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Products Count</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>@category.Count</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@category.ProductCategoryId" class="btn btn-primary">Edit</a>
                    <a asp-action="Details" asp-route-id="@category.ProductCategoryId" class="btn btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@category.ProductCategoryId" class="btn btn-info">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Create New</a>
