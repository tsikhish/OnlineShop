@model IEnumerable<OnlineShops.Models.Customer>


@{
    ViewData["Title"] = "Customer List";
}

<h1>Customer List</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Address Count</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.FirstName @customer.LastName</td>
                <td>@customer.EmailAddress</td>
                <td>@customer.Phone</td>
                <td>@customer.CustomerAddresses.Count</td>
                <td>
                    <a asp-action="Details" asp-route-id="@customer.CustomerId" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@customer.CustomerId" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@customer.CustomerId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Create New Customer</a>