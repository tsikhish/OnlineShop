@model IEnumerable<OnlineShops.Models.Address>

@{
    ViewData["Title"] = "Address List";
}

<h2>Address List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Address Line 1</th>
            <th>Address Line 2</th>
            <th>City</th>
            <th>State/Province</th>
            <th>Country/Region</th>
            <th>Postal Code</th>
            <th>Modified Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.AddressLine1</td>
                <td>@item.AddressLine2</td>
                <td>@item.City</td>
                <td>@item.StateProvince</td>
                <td>@item.CountryRegion</td>
                <td>@item.PostalCode</td>
                <td>@item.ModifiedDate.ToShortDateString()</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.AddressId" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@item.AddressId" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.AddressId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Create" class="btn btn-primary">Create New Address</a>
</div>