@model OnlineShops.Models.SalesOrderHeader
@{
    ViewData["Title"] = "Order Details";
}

<h1>Order Details</h1>

<div>
    <h4>Sales Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Order ID
        </dt>
        <dd class="col-sm-10">
            @Model.SalesOrderId
        </dd>

        <dt class="col-sm-2">
            Order Date
        </dt>
        <dd class="col-sm-10">
            @Model.OrderDate.ToString("d")
        </dd>

        <dt class="col-sm-2">
            Total Amount
        </dt>
        <dd class="col-sm-10">
            @Model.TotalDue.ToString("C")
        </dd>

        <dt class="col-sm-2">
            Customer
        </dt>
        <dd class="col-sm-10">
            @(Model.Customer != null 
                ? $"{Model.Customer.FirstName} {Model.Customer.LastName}" 
                : "N/A")
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>
