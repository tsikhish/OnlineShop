@model OnlineShops.Models.Product

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Product Details";
}

<h2>Product Details</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.ListPrice.ToString("C")</dd>

        <dt class="col-sm-2">Size</dt>
        <dd class="col-sm-10">@Model.Size</dd>

        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.ProductCategory?.Name</dd>

        <dt class="col-sm-2">Image</dt>
        <dd class="col-sm-10">
            @if (Model.ThumbNailPhoto != null)
            {
                <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.ThumbNailPhoto)"
                     alt="Product Image"
                     style="max-width: 300px; max-height: 300px;" />
            }
        </dd>
    </dl>
</div>



<a asp-action="Index" class="btn btn-secondary">Back to List</a>