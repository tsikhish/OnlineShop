@model OnlineShops.Models.Product

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Delete Product";
}

<h2>Delete Product</h2>

<div>
    <h4>Are you sure you want to delete this product?</h4>
    <div>
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@Model.Name</dd>

            <dt class="col-sm-2">Price</dt>
            <dd class="col-sm-10">@Model.ListPrice.ToString("C")</dd>

            <dt class="col-sm-2">Category</dt>
            <dd class="col-sm-10">@Model.ProductCategory?.Name</dd>

            <dt class="col-sm-2">Product Number</dt>
            <dd class="col-sm-10">@ViewData["ProductNumber"]</dd> 

            <dt class="col-sm-2">Image</dt>
            <dd class="col-sm-10">
                @if (Model.ThumbNailPhoto != null)
                {
                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.ThumbNailPhoto)"
                         alt="Product Image"
                         style="max-width: 150px; max-height: 150px;" />
                }
            </dd>
        </dl>
    </div>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" name="id" value="@Model.ProductId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>

</div>