@@model OnlineShops.Models.Product

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Delete Product";
}

<h2>Delete Product</h2>

<div class="alert alert-warning">
    <h4>Are you sure you want to delete this product?</h4>
    <div>
        <dl class="row">
            <dt class="col-sm-3 font-weight-bold">Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3 font-weight-bold">Price</dt>
            <dd class="col-sm-9">@Model.ListPrice.ToString("C")</dd>

            <dt class="col-sm-3 font-weight-bold">Category</dt>
            <dd class="col-sm-9">@Model.ProductCategory?.Name</dd>

            <dt class="col-sm-3 font-weight-bold">Product Number</dt>
            <dd class="col-sm-9">@ViewData["ProductNumber"]</dd>

            <dt class="col-sm-3 font-weight-bold">Image</dt>
            <dd class="col-sm-9">
                @if (Model.ThumbNailPhoto != null)
                {
                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.ThumbNailPhoto)"
                         alt="Product Image"
                         style="max-width: 150px; max-height: 150px;" />
                }
                else
                {
                    <p>No image available</p>
                }
            </dd>
        </dl>
    </div>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" name="id" value="@Model.ProductId" />
    <div class="form-group">
        <button type="submit" class="btn btn-danger btn-lg btn-block">Delete</button>
    </div>
</form>

<div class="form-group">
    <a asp-action="Index" class="btn btn-secondary btn-lg btn-block">Cancel</a>
</div>

<style>
    .alert-warning {
        background-color: #fff3cd;
        border-color: #ffeeba;
    }

    .font-weight-bold {
        font-weight: bold;
    }

    .btn-block {
        width: 100%;
    }

    .btn-lg {
        padding: 12px 24px;
        font-size: 1.25rem;
    }

    .form-group {
        margin-bottom: 20px;
    }

    img {
        border-radius: 8px;
    }
</style>
